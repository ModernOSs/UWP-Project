<Page x:ConnectionId='1'
    x:Class="Account.GoalsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Account"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:common="using:Account.Common"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="using:Account.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <common:DateFomatterConverter x:Key="DateFomatterConverter" />
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='2' x:Name="addGoalButton1" Icon="add" Label="添加目标"                            />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:ConnectionId='3' x:Name="splitViewGrid" Grid.Column="1">
            <StackPanel Background="#F2F2F2">
                <Button x:ConnectionId='21' x:Name="splitViewButton"                               FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="20" VerticalAlignment="Top" Width="48" Height="48" Background="#E6E6E6"/>
                <AppBarButton x:ConnectionId='22' IsCompact="True" Width="48" x:Name="homeButton" Icon="Home"                         />
                <AppBarButton x:ConnectionId='23' IsCompact="True" Width="48" x:Name="detailsButton" Icon="ZeroBars"                            />
                <AppBarButton x:ConnectionId='24' IsCompact="True" Width="48" x:Name="addNewItemButton" Icon="AllApps"                               />
                <AppBarButton x:ConnectionId='25' IsCompact="True" Width="48" x:Name="goalsButton" Icon="OutlineStar"                          />
                <AppBarButton x:ConnectionId='26' IsCompact="True" Width="48" x:Name="addGoalButton" Icon="Bullets"                            />
            </StackPanel>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:ConnectionId='10' x:Name="grayBlock" Grid.Row="0" Background="LightGray"/>
            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="心愿共" Grid.Column="1" FontSize="20" VerticalAlignment="Bottom" Height="36"/>
                <TextBlock x:ConnectionId='19' Text="0" Grid.Column="2" FontSize="48" Margin="10, 0, 10, 0" Name="goalCount"/>
                <TextBlock Text="项，已完成" Grid.Column="3" FontSize="20" VerticalAlignment="Bottom" Height="36"/>
                <TextBlock x:ConnectionId='20' Text="0" Grid.Column="4" FontSize="48" Margin="10, 0, 10, 0" Name="finishedGoalCount"/>
                <TextBlock Text="项" Grid.Column="5" FontSize="20" VerticalAlignment="Bottom" Height="36"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top">
                <ListView x:ConnectionId='11' x:Name="goals" IsItemClickEnabled="True"                                                                         >
                    <ListView.ItemTemplate>
                        <DataTemplate                     >
                            <UserControl x:ConnectionId='12'>
                                <Grid Height="160" Margin="10" BorderThickness="1" BorderBrush="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <SymbolIcon x:ConnectionId='17' Name="finish" Grid.Row="0" Height="36" Width="36" VerticalAlignment="Center" HorizontalAlignment="Center" Symbol="Accept"                                                         />
                                        <SymbolIcon x:ConnectionId='18' Name="delete" Grid.Row="1" Height="36" Width="36" VerticalAlignment="Center" HorizontalAlignment="Center" Symbol="Cancel"                                                         />
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.382*"/>
                                            <RowDefinition Height="0.618*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:ConnectionId='14' VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"                          FontSize="24" Foreground="Gray" FontWeight="SemiBold" Name="goalName"/>
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.618*"/>
                                                <RowDefinition Height="0.382*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock x:ConnectionId='15' Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"                             TextWrapping="Wrap" Width="220" Margin="16"/>
                                            <TextBlock x:ConnectionId='16' Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"                                                                           Margin="0, 0, 10, 0"/>
                                        </Grid>
                                    </Grid>
                                    <Line Grid.Column="1" Stretch="Fill" X1="1" Opacity="0"/>
                                    <Image x:ConnectionId='13' Grid.Column="2"                                     Stretch="Fill"/>
                                </Grid>
                            </UserControl>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>

        <SplitView x:ConnectionId='4' Grid.Column="1" Grid.ColumnSpan="2" x:Name="mySplit" DisplayMode="CompactOverlay" CompactPaneLength="0" OpenPaneLength="200" IsPaneOpen="False" >
            <SplitView.Pane>
                <StackPanel Background="#F2F2F2">
                    <Grid Background="#E6E6E6">
                        <Button x:ConnectionId='9' Margin="8, 0, 8, 0"                               FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="20" VerticalAlignment="Top" Width="48" Height="48" Background="#E6E6E6"/>
                    </Grid>
                    <ListView x:ConnectionId='8' x:Name="navigation" IsItemClickEnabled="True"                                 >
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="Home"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="主页" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="ZeroBars"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="收支详情" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="AllApps"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="添加收支" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="OutlineStar"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="目标详情" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="Bullets"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="添加目标" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <SplitView x:ConnectionId='5' Visibility="Collapsed" Grid.Column="0" x:Name="mySplit_" DisplayMode="Inline" CompactPaneLength="0" OpenPaneLength="200" IsPaneOpen="True">
            <SplitView.Pane>
                <StackPanel Background="#F2F2F2">
                    <Grid Background="#E6E6E6">
                        <Button x:ConnectionId='7' Margin="8, 0, 8, 0"                               FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="20" VerticalAlignment="Top" Width="48" Height="48" Background="#E6E6E6"/>
                    </Grid>
                    <ListView x:ConnectionId='6' IsItemClickEnabled="True"                                 >
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="Home"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="主页" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="ZeroBars"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="收支详情" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="AllApps"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="添加收支" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="OutlineStar"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="目标详情" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <AppBarButton IsCompact="True" VerticalAlignment="Center" Grid.Column="0" IsHitTestVisible="False" Width="48" Icon="Bullets"/>
                                <TextBlock Width="112" TextAlignment="Center" Grid.Column="1" Text="添加目标" VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="768" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="splitViewGrid.Width" Value="0"/>
                        <Setter Target="mySplit.Visibility" Value="Collapsed" />
                        <Setter Target="mySplit_.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="splitViewGrid.Width" Value="48"/>
                        <Setter Target="mySplit_.Visibility" Value="Collapsed" />
                        <Setter Target="mySplit.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>

