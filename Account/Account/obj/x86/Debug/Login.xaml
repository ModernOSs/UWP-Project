<Page
    x:Class="Account.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Account"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="Assets\back.png"/>
        </Grid.Background>
        <Grid x:ConnectionId='1' x:Name="loginView" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='8' Grid.Row="0" Width="200" Name="loginErr" 
                       Foreground="Red" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Bottom" Height="40"/>
                <ProgressBar x:ConnectionId='9' Grid.Row="0" x:Name="progressBar" Foreground="White" IsIndeterminate="True" Opacity="0"
                         HorizontalAlignment="Center"  VerticalAlignment="Bottom"  Width="300" Height="20"/>
                <TextBlock Grid.Row="1" Text="用户名" FontSize="16" Foreground="White" Width="60" Height="20" Margin="35,25,250,15"/>
                <TextBox x:ConnectionId='10' Grid.Row="1" PlaceholderText="请输入您的账户" Width="200" x:Name="username" Background="Transparent" Margin="20,20,-20,10"/>
                <TextBlock Grid.Row="2" Text="密   码" FontSize="16" Foreground="White" Width="60" Height="20" Margin="35,25,250,15"/>
                <PasswordBox x:ConnectionId='11' Grid.Row="2" PlaceholderText="请输入您的密码" Width="200"  x:Name="password"  Background="Transparent" Margin="20,20,-20,10"/>
                <CheckBox x:ConnectionId='12' Grid.Row="3" x:Name="auto" Content="保持登录" Foreground="White" HorizontalAlignment="Center"/>
            <Grid Grid.Row="4" Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                <Button x:ConnectionId='13' x:Name="toRegister" Grid.Column="0" Height="40" Width="100" Foreground="White" Content="注册"                           Margin="20" HorizontalAlignment="Center"/>
                <Button x:ConnectionId='14' x:Name="login" Grid.Column="1" Height="40" Width="100" Foreground="White" Content="登录"                      Margin="20" HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
            <Grid x:ConnectionId='2' x:Name="registerView" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox x:ConnectionId='3' Grid.Row="1" Width="200" x:Name="username_" Margin="20"/>
                <TextBox x:ConnectionId='4' Grid.Row="2" Width="200" x:Name="password_" Margin="20"/>
                <Grid Grid.Row="3" Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:ConnectionId='6' x:Name="toLogin" Grid.Column="0" Height="40" Width="100" Content="登录"                       Margin="20" HorizontalAlignment="Center"/>
                    <Button x:ConnectionId='7' x:Name="submit" Grid.Column="1" Height="40" Width="100" Content="提交"                      Margin="20" HorizontalAlignment="Center"/>
                </Grid>
                <TextBlock x:ConnectionId='5' Grid.Row="4" x:Name="registerErr" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
</Page>

